<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <Button
        android:onClick="toFacebook"
        android:text="Facebook"
        android:layout_marginHorizontal="50dp"
        android:textColor="@color/com_facebook_button_text_color"
        android:background="@drawable/button_shape"
        android:id="@+id/facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
    <Button
        android:onClick="toTwitter"
        android:text="Twitter"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="50dp"
        android:layout_below="@+id/facebook"
        android:background="@drawable/button_shape"
        android:textColor="@color/com_facebook_button_text_color"
        android:id="@+id/twitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:onClick="toLinkedin"
        android:layout_below="@+id/twitter"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/button_shape"
        android:textColor="@color/com_facebook_button_text_color"
        android:text="LinkedIn"
        android:id="@+id/linkedin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/welcomeText"
        android:textColor="@color/welcomeBlack"
        android:textSize="20dp"
        android:layout_marginBottom="100dp"
        android:layout_marginHorizontal="50dp"
        android:text="@string/my_welcome_text"
        android:layout_above="@+id/facebook"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />



</RelativeLayout>